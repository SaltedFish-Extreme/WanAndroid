<!--夜间主题差异型编程-->
<resources>
    <!-- 应用主题样式 -->
    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- 应用的强调色，CheckBox RadioButton Switch 等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@color/orchid</item>
        <!--图标填充颜色-->
        <item name="iconTint">@color/white</item>
        <!--位图填充颜色-->
        <item name="drawableTint">@color/white</item>
        <!--子图标填充颜色-->
        <item name="itemIconTint">@color/selector_color_bottom_navigation_night</item>
        <!--子文本填充颜色-->
        <item name="itemTextColor">@color/selector_color_bottom_navigation_night</item>
    </style>
</resources>