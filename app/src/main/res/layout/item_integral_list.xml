<?xml version="1.0" encoding="utf-8"?><!--适配器积分获取列表-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_18"
        tools:text="@string/integral_reason" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_reason"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_toStartOf="@id/tv_score"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/sp_15"
        app:autoSizeMinTextSize="@dimen/sp_12"
        app:autoSizeTextType="uniform"
        tools:text="@string/integral_desc" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_drawable_bg_tint"
        android:textSize="@dimen/sp_16"
        tools:text="@string/integral_count" />

</RelativeLayout>