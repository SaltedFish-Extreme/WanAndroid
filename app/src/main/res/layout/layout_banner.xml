<?xml version="1.0" encoding="utf-8"?><!--填充式通用轮播图布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:scaleType="fitXY"
        app:banner_indicator_gravity="right"
        app:banner_indicator_marginBottom="@dimen/dp_15"
        app:banner_indicator_marginRight="@dimen/dp_10"
        app:banner_indicator_selected_color="@android:color/holo_blue_bright" />
</LinearLayout>